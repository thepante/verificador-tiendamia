{
  "name": "astm",
  "version": "1.0.0",
  "description": "Comprueba los precios de los productos listados en Tiendamia",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf addon && webpack && npm run copy:addon",
    "copy:addon": "cp manifest.json ./addon & cp ./src/style.css ./addon",
    "start:firefox": "web-ext run --source-dir ./addon/ --start-url 'about:debugging#/runtime/this-firefox'",
    "start:chromium": "web-ext run -t chromium --source-dir ./addon/",
    "pack": "web-ext build --source-dir=./addon --artifacts-dir=./",
    "zipsc": "zip -r sc-verificador-tiendamia src manifest.json package.json package-lock.json webpack.config.js"
  },
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "babel-loader": "^8.1.0",
    "webpack": "^2.3.2"
  },
  "dependencies": {
    "artoo-js": "^0.4.0",
    "regenerator-runtime": "^0.13.5"
  }
}
