{
    "manifest_version": 2,
    "name": "Verificador de precios de Tiendamia",
    "description": "Comprueba los precios de los productos que visualizas en Tiendamia",
    "version": "0.3.5",
    "content_scripts": [
      {
        "matches": ["https://tiendamia.com/*"],
        "css": ["style.css"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "permissions": [
      "https://www.amazon.com/",
      "https://www.ebay.com/",
      "https://www.walmart.com/",
      "webRequest"
    ]
  }
